<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @book.errors.count %>errors prohibited this book from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <% if @book.errors.any? %>
      <div class="field_with_errors">
    <% end %>
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    <% if @book.errors.any? %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <% if @book.errors.any? %>
      <div class="field_with_errors">
    <% end %>
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <% if @book.errors.any? %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  <%= link_to "Show", book_path, class: "show" %>
  |
  <%= link_to "Back", "/books", class: "back" %>
<% end %>

